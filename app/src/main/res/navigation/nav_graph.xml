<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.eplan.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/viewActivityDetails"
            app:destination="@id/activityDetailsFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/wait_anim"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/wait_anim" />
    </fragment>
    <fragment
        android:id="@+id/activityDetailsFragment"
        android:name="com.example.eplan.ActivityDetailsFragment"
        android:label="ActivityDetailsFragment" >
        <argument
            android:name="activityName"
            app:argType="string" />
        <argument android:name="activityDescription"
            app:argType="string" />
        <argument
            android:name="start"
            app:argType="string" />
        <argument
            android:name="end"
            app:argType="string" />
        <argument
            android:name="oreSpostamento"
            app:argType="string" />
        <argument
            android:name="km"
            app:argType="string" />
        <action
            android:id="@+id/backHome"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_activityDetailsFragment_to_appointmentsFragment"
            app:destination="@id/appointmentsFragment" />
        <action
            android:id="@+id/action_activityDetailsFragment_to_accountFragment"
            app:destination="@id/accountFragment" />
    </fragment>
    <fragment
        android:id="@+id/appointmentsFragment"
        android:name="com.example.eplan.AppointmentsFragment"
        android:label="AppointmentsFragment" />
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.eplan.AccountFragment"
        android:label="AccountFragment" />
</navigation>